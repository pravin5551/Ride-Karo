<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".views.OTPSecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="#f9d915"
        android:orientation="vertical">

        <android.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9d915">


                <Button
                    android:id="@+id/back_otp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/invite_bg"
                    android:drawableStart="@drawable/ic_baseline_arrow_back_24"
                    android:padding="5dp"/>

                <Button
                    android:id="@+id/support_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/invite_bg"
                    android:padding="5dp"
                    android:fontFamily="@font/productsansregular"
                    android:text="@string/support"
                    android:textAllCaps="false" />

            </RelativeLayout>

        </android.widget.Toolbar>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:text="@string/enter_verification_pin"
            android:fontFamily="@font/productsansregular"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/productsansregular"
            android:layout_marginEnd="@dimen/dp_25"
            android:text="@string/Seat_back_and_relax_while_we_verify_your_phone_number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <EditText
            android:id="@+id/otpTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsansregular"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_60"
            android:inputType="number" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/waiting_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:fontFamily="@font/productsansregular"
                android:gravity="center_horizontal"
                android:text="@string/Waiting_for_OTP"
                android:textColor="@color/Gray" />

            <TextView
                android:id="@+id/time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toEndOf="@+id/waiting_tv"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="56sp" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/verifyButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_100"
            android:fontFamily="@font/productsansregular"
            android:background="@drawable/rect_round_mob"
            android:text="@string/Continue"
            android:textColor="#f9d915" />
    </RelativeLayout>
</LinearLayout>