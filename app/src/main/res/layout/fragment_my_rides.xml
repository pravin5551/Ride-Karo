<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.navDrawerFragments.MyRidesFragment">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:background="@color/yellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/productsansregular"
            android:text="@string/Previous_Rides"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_bg"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvBikeRide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsansregular"
                android:text="@string/bike_taxi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvBikeRide"
                android:fontFamily="@font/productsansregular"
                android:text="@string/_9_days_ago" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBikeRide"
                android:fontFamily="@font/productsansregular"
                android:text="@string/cancelled"
                android:textColor="@color/Red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvIndianRupeee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_toStartOf="@id/tvTotalRupeee"
                android:fontFamily="@font/indianrupee"
                android:text="`"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalRupeee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:fontFamily="@font/opensansregular"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCashh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvIndianRupeee"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/productsansregular"
                android:text="@string/cash"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tvCashh"
                android:layout_marginTop="10dp"
                android:background="@color/lighter_gray" />

            <ImageView
                android:id="@+id/imgGreenDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@id/view9"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/green_circle" />

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view9"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imgGreenDot"
                android:fontFamily="@font/productsansregular"
                android:text="@string/Bandra_West"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imgRedDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@id/imgGreenDot"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/red_circle" />

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSource"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imgGreenDot"
                android:fontFamily="@font/productsansregular"
                android:text="@string/Bandra_East"
                android:textColor="@color/black" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView1"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_bg"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvBikeRide2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsansregular"
                android:text="@string/bike_taxi" />

            <TextView
                android:id="@+id/tvToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvBikeRide2"
                android:fontFamily="@font/productsansregular"
                android:text="@string/today" />

            <TextView
                android:id="@+id/tvRideStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBikeRide2"
                android:fontFamily="@font/productsansregular"
                android:text="@string/active"
                android:textColor="@color/Green"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvIndianRupeee3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_toStartOf="@id/tvTotalRupeee2"
                android:fontFamily="@font/indianrupee"
                android:text="`"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalRupeee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:fontFamily="@font/opensansregular"
                android:text="13"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCashh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvIndianRupeee3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/productsansregular"
                android:text="Cash"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:id="@+id/view10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tvCashh2"
                android:layout_marginTop="10dp"
                android:background="@color/lighter_gray" />

            <ImageView
                android:id="@+id/imgGreenDot2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@id/view10"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/green_circle" />

            <TextView
                android:id="@+id/tvSource2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view10"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imgGreenDot2"
                android:fontFamily="@font/productsansregular"
                android:text="@string/gorai_naka"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imgRedDot2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@id/imgGreenDot2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/red_circle" />

            <TextView
                android:id="@+id/tvDestination2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSource2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imgGreenDot2"
                android:fontFamily="@font/productsansregular"
                android:text="@string/santosh_bhuvan"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view10"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/red_curve"
                android:fontFamily="@font/productsansregular"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnCallRider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view10"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/btnCancel"
                android:layout_toEndOf="@id/tvDestination2"
                android:background="@drawable/green_bg"
                android:fontFamily="@font/productsansregular"
                android:text="Call Rider"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>