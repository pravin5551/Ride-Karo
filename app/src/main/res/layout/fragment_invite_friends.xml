<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.navDrawerFragments.InviteFriendsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#3B5999"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_20"
                android:fontFamily="@font/productsansregular"
                android:text="@string/invite_friends"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_20"
                android:fontFamily="@font/productsansregular"
                android:text="@string/Invite_friends_and_get_rewards"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/unique_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/rect_bg_code"
                    android:text="CB1C9JB"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/unique_code_button"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_content_copy_24"
                    />

            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_20"
                android:fontFamily="@font/productsansregular"
                android:src="@drawable/girl_bitcoin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/productsansregular"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="444dp"
                android:fontFamily="@font/productsansregular"
                android:src="@drawable/share_ss" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsansregular"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_share_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/invite_bg"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_10"
                    android:text="@string/Invite"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/btnShare_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/sahre_bg"
                    android:drawableEnd="@drawable/ic__02_whatsapp"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_10"
                    android:text="@string/Share_via"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>